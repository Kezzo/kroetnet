{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "outDir": "compiled-src",
    "rootDir": "src",
    "removeComments": true,
    "typeRoots": [ "node_modules/@types" ],
    "alwaysStrict": true
  },
  "include": [
    "src"
    ],
    "exclude": [
      "node_modules"
    ]
}
